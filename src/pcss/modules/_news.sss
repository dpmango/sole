// NEWS
.news
  &__card
    padding-top: 60px
    padding-bottom: 50px
    border-bottom: 1px dashed #C7CBCC
    @media($mobile)
      padding-bottom: 35px
      padding-top: 35px
    &__image
      border-radius: 12px
      overflow: hidden
      display: flex
      align-items: center
      text-align: center
      justify-content: center
      background-color: #F1F4FA
      @media($mobile)
        border-radius: 0
      .news__card__parallaxImg
        width: 100%
        height: 100%
        background-attachment: fixed
        background-repeat: no-repeat
        background-position: center
        max-width: 100%
        @media($tablet)
          background-attachment: local
          background-size: 100%
      img
        max-width: 100%
    &__bgFixed
      height: 370px
      @media($mobile)
        height: 230px


    &__content
      margin-top: 40px
      @media($mobile)
        margin-top: 20px
      p
        margin-top: 5px
        font-size: 16px
        font-family: 'Helvetica Neue'
        font-weight: 300
        line-height: 27px
    &__title
      font-family: 'CoreSansA45'
      letter-spacing: -.85px
      font-size: 22px
    &__datetime
      font-size: 13px
      font-family: 'CoreSansA45'
      color: $colorMute
      padding-top: 15px
      padding-bottom: 15px
    .btn--rounded
      margin-left: 20px

    &__quote
      font-family: 'Helvetica Neue'
      font-style: italic
      font-size: 16px
      font-weight: 300
      line-height: 27px
      position: relative
      &::before
        position: absolute
        top: 20px
        left: 0
        content: 'â€œ'
        font-size: 90px
        line-height: 40px
        color: #D2D5D6
        font-family: 'Helvetica Neue'
      p
        display: inline-block
        padding-left: 50px

.shareArticle
  display: inline-block
  vertical-align: middle
  margin-left: 10px
  font-size: 0
  margin-top: -5px
  @media($mobile)
    display: block
    margin-top: 10px
    margin-left: 0
  &.active
    a
      opacity: 1
      width: auto
      height: auto
      animation-name: 'show-sharing-btn'
      animation-timing-function: cubic-bezier(.05,1.31,.37,1.35)
      animation-duration: .25s
      &:nth-child(1)
        animation-delay: .1s
      &:nth-child(2)
        animation-delay: .2s
      &:nth-child(3)
        animation-delay: .3s
      &:nth-child(4)
        animation-delay: .4s
      &:nth-child(5)
        animation-delay: .5s
      &:nth-child(6)
        animation-delay: .6s
      &:nth-child(7)
        animation-delay: .7s
  a
    display: inline-block
    height: 0.1px
    width: 0.1px
    opacity: 0
    overflow: hidden

@keyframes show-sharing-btn
  0%
    transform: scale(0) translate3d(-40px, 0, 0)
  100%
    transform: scale(1) translate3d(0px, 0, 0)

// Single news
.newsContent
  margin-top: 35px
  padding-bottom: 65px

.newsSidebar
  display: block
  border: 1px solid #E5EBEE
  border-radius: 12px
  padding: 15px 20px
  margin-top: 35px
  @media($desktop)
    margin-top: 20px
    padding-left: 15px
    padding-right: 15px
  p
    line-height: 23px
    @media($desktop)
      font-size: 12px
      line-height: 18px
  a
    text-decoration: underline
    &:hover
      text-decoration: none
      color: $colorBlue
    .ico
      margin-left: 12px
  @media($desktop)
    .news__card__title
      font-size: 18px
    .news__card__datetime
      font-size: 12px


// FAQ
.faqList
  margin-bottom: 200px
  margin-top: 40px
  @media($tablet)
    margin-bottom: 100px
  @media($mobile)
    margin-bottom: 40px
  &__group
    position: relative
    .ico-faq-toggle
      position: absolute
      top: 6px
      left: 0
      background-image: svg-load('../../images/svg/faq-plus.svg')
      width: 10px
      height: 10px
      cursor: pointer
    &.is-active
      .ico-faq-toggle
        background-image: svg-load('../../images/svg/faq-minus.svg')
        height: 2px
        top: 10px
      .faqList__content
        display: block
        opacity: 1
        transition: opacity .3s ease
        height: auto
        width: auto
        margin-top: 10px
        padding-bottom: 10px

  &__title
    font-family: 'CoreSansA45'
    letter-spacing: -.6px
    font-size: 16px
    line-height: 22px
    padding-left: 30px
    margin-top: 25px
    cursor: pointer
    transition: color .3s ease-in-out
    &:hover
      color: color($fontColor a(75%))
  &__content
    display: none
    opacity: 0
    height: 0.1px
    width: 0.1px
    font-family: 'Helvetica Neue'
    font-size: 14px
    line-height: 23px
    font-weight: 300
    padding-left: 30px

.tableRow
  display: flex
  justify-content: space-between
  align-items: center
  padding-top: 10px
  @media(width <= 850px)
    flex-wrap: wrap
    flex-direction: column
    align-items: flex-start
  &__left
    flex: 1 0 auto
    font-family: 'CoreSansA45'
  &__middle
    flex: 1 1 auto
    border-bottom: 1px dotted #A3A4A5
    width: 100%
    padding-top: 7px
    margin-left: 10px
    margin-right: 10px
    @media(width <= 850px)
      display: none
  &__right
    flex: 1 0 auto
    text-align: right
    font-family: 'CoreSansA55'
    font-size: 12px
    @media(width <= 850px)
      text-align: left
      margin-top: 5px
      margin-bottom: 10px
    span
      margin-right: 10px
    a
      text-decoration: underline
      &:hover
        color: $colorRed

.newsInnerPage
  position: relative
  .col35
    @media($mobile)
      display: none

.faqPage
  position: relative
  .col35
    @media($mobile)
      display: none
